#! /bin/sh

_die () {
  echo $1
  exit 1
}

_usage () {
	echo "Usage: testenv <cmd>"
	echo "  cmd - Bash command to sandbox."
	exit 0
}

if [ $# -eq 0 ]; then
	_usage
fi

if [ -f 'dev.env' ]; then
	eval $(grep -v '^#' dev.env | sed 's/^/export /g')
else
	_die "'dev.env' not found."
fi

if [ -f 'test.env' ]; then
	eval $(grep -v '^#' test.env | sed 's/^/export /g')
fi

$@
